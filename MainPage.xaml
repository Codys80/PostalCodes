<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PostalCodes.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label x:Name="PostDisplay"
                   Text=""/>
            <Button
                x:Name="PostButton"
                Text="Kliknij żeby kot pocztowy" 
                Clicked="OnPostClicked"
                HorizontalOptions="Fill" />

            <Entry x:Name="PostEntry"
                   Placeholder="Podaj kod pocztowy "/>

            <Button
                x:Name="PostButtonCity"
                Text="Kliknij żeby nazwa stanu/miastu" 
                Clicked="OnPostClickedCity"
                HorizontalOptions="Fill" />
            <HorizontalStackLayout>
                <Entry x:Name="PostEntryCityState"
                   Placeholder="Stan w skrócie"/>
                <Entry x:Name="PostEntryCity"
                   Placeholder="Miasto "/>
            </HorizontalStackLayout>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
